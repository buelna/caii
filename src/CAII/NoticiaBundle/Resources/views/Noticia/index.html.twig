{% extends '::frontend.html.twig' %}

{% block contenido %}

    <div class="row">
        <div class="large-12 columns">
            <h1>{{ 'noticias' | trans }}</h1><br>
         

        {% for entity in entities %}
        <article>
            
            <h3><a href="#" data-reveal-id="{{ entity.id }}">{{ entity.titulo }}</a></h3>
            <h6>{% if entity.fecha %}{{ entity.fecha|localizeddate('long', 'short') }}{% endif %}</h6>
            <div class="row">
                <div class="large-3 columns">
                    <a href="#" data-reveal-id="{{ entity.id }}"><img src="{{ asset('uploads/images/noticias/' ~ entity.fotoURL) }}" alt="" alt="" height="100%" width="100%" /></a>
                </div>
                <div class="large-9 columns">
                <p>{{ entity.descripcion }}</p>
                <p><a href="#" data-reveal-id="{{ entity.id }}">Ver mÃ¡s>></a></p>
                </div>
            </div>
            <div id="{{ entity.id }}" class="reveal-modal" data-reveal>
              <article>
                <div class="row">
                    <h3>{{ entity.titulo }}</h3>
                    <h6>{% if entity.fecha %}{{ entity.fecha|localizeddate('long', 'short') }}{% endif %}</h6>
                </div>
                <div class="row">
                 
                  
                    <img src="{{ asset('uploads/images/noticias/' ~ entity.fotoURL) }}" alt="" alt="" height="30%" width="30%" align="left" style="padding:15px;"/>
                  
                
                    <p align="justify">{{ entity.contenido }}</p>
                </div>
              </article>
              <a class="close-reveal-modal">&#215;</a>
            </div>   


        </article>   
        <br>
        <hr /> 
             
        {% endfor %}
       

      
        </div>
    </div>
    {% endblock %}
