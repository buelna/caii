{% extends '::frontend.html.twig' %}

{% block contenido %}

    <div class="row">
    <div class="large-12 columns">
    <!--<h1>Miembros</h1>-->

        {% for ocupacion in ocupaciones %}
            {% for ocupacion2 in ocupaciones2 %}
               {% if ocupacion.id==ocupacion2.id%} 
                <h3>{{ocupacion2.descripcion}}</h3>
                {% endif %}
            {% endfor %}
            
            <table class="table table-hover">
                <tbody>
                {% for entity in entities %}

                    {% if entity.ocupacion==ocupacion.id%}
               
                    <tr>
                        <td>{% if entity.fotoURL %} 
                                <img src="{{ asset('bundles/portada/img/fotosAlumnos/' ~ entity.fotoURL) }}" alt="" alt="" height="42" width="42" />
                            {% else %}   
                                <img src="{{ asset('bundles/portada/img/fotosAlumnos/unknown-person.gif') }}" alt="" height="42" width="42" />
                            {% endif %}    </td>
                        <td><h5><a href="{{ path('miembro_show', { 'id': entity.id }) }}">{{ entity.nombre }} {{ entity.apellidoP }} {{ entity.apellidoM }}</a></h5></td>
                       
                        
                    </tr>
                    {% endif %}
                
            {% endfor %}


            </tbody>
            </table>
             
        {% endfor %}
        
    

      
    </div>
   </div>
    {% endblock %}
